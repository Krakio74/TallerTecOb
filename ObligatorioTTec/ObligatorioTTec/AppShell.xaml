<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ObligatorioTTec.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ObligatorioTTec"
    Shell.FlyoutBehavior="Disabled"
    Title="ObligatorioTTec">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <Shell.TitleView>
        <Grid ColumnDefinitions="auto,*,auto">
            <Label Text="Obligatorio" BackgroundColor="Red"></Label>
            <HorizontalStackLayout Grid.Column="2">
                <ImageButton
                    Clicked="PerfilUsuario"
                    Source="Images/userIcon.png"/>
                <!--<Label Text="Icon" BackgroundColor="Red"></Label>-->
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>

</Shell>
