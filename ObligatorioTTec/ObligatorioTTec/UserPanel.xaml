<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTTec.UserPanel"
             Title="UserPanel">
    <VerticalStackLayout>
        <Label 
            Text="Inicie Session"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Style="{StaticResource LableDefault}"/>

        <Entry
                x:Name="CorreoUs"
                SemanticProperties.Hint="Correo electronico"
                Style="{StaticResource IngresoDefault}"
                Placeholder="Correo Electronico"/>
        <Entry
                x:Name="PasswordUs"
                SemanticProperties.Hint="Contrasena"
                Style="{StaticResource IngresoDefault}"
                Placeholder="Contrasena"/>
        <HorizontalStackLayout
            HorizontalOptions="Center">

            <Button 
                Text="Enviar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                Style="{StaticResource BotonDefault}"
            ></Button>

            <Button
                Text="Registrarse"
                HorizontalOptions="Center"
                Clicked="Register"
                Style="{StaticResource BotonDefault}"/>
        </HorizontalStackLayout>


    </VerticalStackLayout>
</ContentPage>